<?xml version="1.0" ?>
<robot name="hexapod" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Gazebo ros2_control plugin -->
    <gazebo>
        <plugin name="gz_ros2_control" filename="libgz_ros2_control-system.so">
            <robot_param>robot_description</robot_param>
            <robot_param_node>robot_state_publisher</robot_param_node>
        </plugin>
    </gazebo>

    <!-- Material properties for Gazebo -->
    <gazebo reference="base_link">
        <material>Gazebo/Grey</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <selfCollide>true</selfCollide>
    </gazebo>

    <!-- Leg link materials and properties -->
    <xacro:macro name="leg_gazebo_properties" params="leg_num">
        <gazebo reference="coxa_${leg_num}_link_1">
            <material>Gazebo/Black</material>
            <mu1>0.2</mu1>
            <mu2>0.2</mu2>
        </gazebo>
        
        <gazebo reference="femur_${leg_num}_link_1">
            <material>Gazebo/Black</material>
            <mu1>0.2</mu1>
            <mu2>0.2</mu2>
        </gazebo>
        
        <gazebo reference="tibia_${leg_num}_link_1">
            <material>Gazebo/Black</material>
            <mu1>0.8</mu1>
            <mu2>0.8</mu2>
            <kp>1000000.0</kp>
            <kd>100.0</kd>
            <minDepth>0.001</minDepth>
            <maxVel>1.0</maxVel>
        </gazebo>
    </xacro:macro>

    <!-- Apply properties to all legs -->
    <xacro:leg_gazebo_properties leg_num="1" />
    <xacro:leg_gazebo_properties leg_num="2" />
    <xacro:leg_gazebo_properties leg_num="3" />
    <xacro:leg_gazebo_properties leg_num="4" />
    <xacro:leg_gazebo_properties leg_num="5" />
    <xacro:leg_gazebo_properties leg_num="6" />

    <!-- Add ros2_control hardware interface -->
    <ros2_control name="hexapod_control" type="system">
        <hardware>
            <plugin>gz_ros2_control/GzSystem</plugin>
            <param name="update_rate">100</param>
        </hardware>

        <!-- Joint interfaces for all legs -->
        <xacro:macro name="leg_joint_interfaces" params="leg_num">
            <joint name="coxa_${leg_num}_joint">
                <command_interface name="position">
                    <param name="min">-3.14159</param>
                    <param name="max">3.14159</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <state_interface name="effort"/>
            </joint>
            
            <joint name="femur_${leg_num}_joint">
                <command_interface name="position">
                    <param name="min">-1.57</param>
                    <param name="max">1.57</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <state_interface name="effort"/>
            </joint>
            
            <joint name="tibia_${leg_num}_joint">
                <command_interface name="position">
                    <param name="min">-1.57</param>
                    <param name="max">1.57</param>
                </command_interface>
                <state_interface name="position"/>
                <state_interface name="velocity"/>
                <state_interface name="effort"/>
            </joint>
        </xacro:macro>

        <!-- Apply joint interfaces to all legs -->
        <xacro:leg_joint_interfaces leg_num="1" />
        <xacro:leg_joint_interfaces leg_num="2" />
        <xacro:leg_joint_interfaces leg_num="3" />
        <xacro:leg_joint_interfaces leg_num="4" />
        <xacro:leg_joint_interfaces leg_num="5" />
        <xacro:leg_joint_interfaces leg_num="6" />
    </ros2_control>

</robot>
